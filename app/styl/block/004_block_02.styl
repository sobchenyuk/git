/*
 * block_02
 */
.scrollto
	cursor: pointer;
.menu
	display: none;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	background: #e9e9e9;
	z-index: 10;
	border-bottom: 1px solid;
	border-color: white;
.menu__block
	display: flex;
	justify-content: space-around;
.top__menu__item
	display: inline;
.top__menu__link
	font-size: 16px;
	color: #000;
	line-height: .444;
	text-decoration: none;
	text-transform: uppercase;
	padding: 19px;
	&:hover
		background: #dddddd;
		border-bottom: 2px solid;
.block_02
	text-align: center;
.block_02__box__content__text
	p
		font-size: 17px;
		color: rgb(0, 0, 0);
		line-height: 1.2;
.block_02__box__content__box__item
	p
		font-size: 17px;
		color: rgb(0, 0, 0);
		line-height: 1.2;
.block_02__box__content__box__item__images
	border-width: 2px;
	border-color: rgb(168, 168, 168);
	border-style: solid;
	border-radius: 50%;
	background-color: rgb(0, 0, 0);
	width: 251px;
	height: 251px;
	margin-left: auto;
	margin-right: auto;
	display: flex;
	transition: .3s linear;
	i
		margin auto
	&:hover
		border-color: #de1e11;
		background-color: #fff;
.block__descript__title
	display: flex;
	height: 100%;
	margin: 0;
	span
		height: 21px;
		background: #e9e9e9;
		padding-left: 5px;
		padding-right: 5px;
.block__descript__title__top
	font-size: 30.681px;
	color: rgb(0, 0, 0);
	line-height: 0.444;
	position: relative;
	top: -10px;
	left: -11px;
.block__descript__title__botton
	font-size: 31px;
	color: rgb(222, 30, 17);
	font-weight: bold;
	line-height: 0.438;
	margin-top: auto;
	margin-left: auto;
	position: relative;
	top: 6px;
	left: 2px;
.block_02
	padding-top: 4em;
.block__descript
	border-width: 2px;
	border-color: #de1e11;
	border-style: solid;
	width: 448px;
	height: 92px;
	margin-left: auto;
	margin-right: auto;